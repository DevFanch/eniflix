{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ course.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ course.modifiedAt ? course.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ course.duration }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ course.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ course.category.name }}</td>
            </tr>
            <tr>
                <th>Trainers : {{ course.trainers|length }}</th>
                <td>
                    <ul>
                        {% for trainer in course.trainers %}
                            <li>{{ trainer.firstname }} {{ trainer.lastname }}</li>

                        {% else %}
                            <li>Pas de formateur(s)</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
