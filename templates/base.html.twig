<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eniflix{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/icon.png') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <h1><img src="{{ asset('images/logo.png') }}"></h1>
            <nav>
                <ul>
                    <li style="padding: 5px;"><a href="{{ path('serie_list') }}">Catalogue</a></li>
                    <li style="padding: 5px;"><a href="{{ path('serie_create') }}">Ajouter une SÃ©rie</a></li>
                    <li style="padding: 5px;"><a href="{{ path('app_course_index') }}">Cours</a></li>
                </ul>
            </nav>

            {% for label, messages in app.flashes %}
                {%  for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
